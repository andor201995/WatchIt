<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.todkars.shimmer.ShimmerRecyclerView
        android:id="@+id/shimmer_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:orientation="vertical"
        app:shimmer_recycler_base_color="@color/shimmerColor"
        app:shimmer_recycler_colored="true"
        app:shimmer_recycler_highlight_color="@color/headTextColor"
        app:shimmer_recycler_item_count="5"
        app:shimmer_recycler_layout="@layout/movie_list_loader_item" />

</LinearLayout>